---
type Props = {
    title: string;
    description: string;
    image: string;
};
const { title, description, image } = Astro.props;
---

<div class="swiper-slide relative">
    <img set:html="src=" src={image} alt={title} />
    <div
        class="bg-gradient-to-b from-transparent to-black/70 absolute left-0 top-0 h-full w-full"
    >
    </div>
    <div
        class="flex flex-col items-center justify-center text-white absolute left-0 top-0 h-full w-full"
    >
        <h1 class="text-5xl md:text-7xl font-display mb-4">{title}</h1>
        <p class="text-xl md:text-2xl">{description}</p>
    </div>
</div>
