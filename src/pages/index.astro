---
import Carousel from "../components/Carousel.astro";
import Layout from "../layouts/Layout.astro";

const testimonials = [
  {
    name: "Emily & James",
    event: "Wedding Photography",
    image:
      "https://images.unsplash.com/photo-1523419409543-a5e549c1faa8?w=100&h=100&fit=crop",
    text: "Sarah captured our wedding day perfectly! Every time we look at our photos, we relive those beautiful moments.",
  },
  {
    name: "David Chen",
    event: "Corporate Event",
    image:
      "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=100&h=100&fit=crop",
    text: "Professional, creative, and incredibly talented. They made our company event look absolutely spectacular.",
  },
  {
    name: "Sophie Williams",
    event: "Portrait Session",
    image:
      "https://images.unsplash.com/photo-1438761681033-6461ffad8d80?w=100&h=100&fit=crop",
    text: "The best portrait session I've ever had. They made me feel comfortable and the results were stunning.",
  },
  {
    name: "The Martinez Family",
    event: "Family Portraits",
    image:
      "https://images.unsplash.com/photo-1484688493527-670f98f9b195?w=100&h=100&fit=crop",
    text: "They have a gift for capturing genuine moments. Our family photos are absolutely priceless.",
  },
];

const stats = [
  { number: "1000+", label: "Happy Clients" },
  { number: "50+", label: "Awards Won" },
  { number: "15+", label: "Years Experience" },
  { number: "100K+", label: "Photos Delivered" },
];
---

<Layout title="Professional Photography Portfolio">
  <Carousel />

  <!-- Stats Section -->
  <section class="py-16 bg-gradient-to-r from-red to-darkRed text-white">
    <div class="container mx-auto px-6">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        {
          stats.map((stat) => (
            <div data-aos="fade-up">
              <div class="text-4xl font-bold mb-2">{stat.number}</div>
              <div class="text-sm uppercase tracking-wider">{stat.label}</div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Genres Section -->
  <section class="py-20 bg-cream dark:bg-gray-900">
    <div class="container mx-auto px-6">
      <h2
        class="text-4xl font-display text-center mb-12 bg-gradient-to-r from-goldLight to-goldDark bg-clip-text text-transparent"
        data-aos="fade-up"
      >
        Our Specialties
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          [
            {
              href: "/showroom?genre=wedding",
              src: "https://images.unsplash.com/photo-1519741497674-611481863552?w=800&h=600&fit=crop",
              alt: "Wedding"
            },
            {
              href: "/showroom?genre=portrait",
              src: "https://images.unsplash.com/photo-1537907690979-ee8e01276184?w=800&h=600&fit=crop",
              alt: "Portrait"
            },
            {
              href: "/showroom?genre=events",
              src: "https://images.unsplash.com/photo-1511285560929-80b456fea0bc?w=800&h=600&fit=crop",
              alt: "Events"
            }
          ].map(({ href, src, alt }) => (
            <a href={href} class="group" data-aos="fade-up">
              <div class="relative overflow-hidden rounded-lg shadow-lg border border-gradient-to-r from-goldLight to-goldDark">
                <img
                  src={src}
                  alt={alt}
                  class="w-full h-64 object-cover transform group-hover:scale-110 group-hover:shadow-[0_0_15px_#b00303aa] transition duration-500"
                />
                <div
                  class="absolute inset-0 bg-black/50 flex items-center justify-center"
                >
                  <h3 class="text-2xl text-white font-display">{alt}</h3>
                </div>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <hr class="border-t-2 border-gradient-to-r from-red to-darkRed" />

  <!-- Process Section -->
  <section class="py-20 bg-beige dark:bg-gray-800">
    <div class="container mx-auto px-6">
      <h2
        class="text-4xl font-display text-center mb-12 bg-gradient-to-r from-goldLight to-goldDark bg-clip-text text-transparent"
        data-aos="fade-up"
      >
        Our Process
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          [
            {
              icon: "ðŸ“ž",
              title: "1. Consultation",
              desc: "We discuss your vision and plan the perfect shoot"
            },
            {
              icon: "ðŸ“¸",
              title: "2. Photo Session",
              desc: "Professional photography with attention to detail"
            },
            {
              icon: "âœ¨",
              title: "3. Delivery",
              desc: "Carefully edited photos delivered to you"
            }
          ].map(({ icon, title, desc }, i) => (
            <div class="text-center" data-aos="fade-up" data-aos-delay={i * 100}>
              <div class="text-5xl mb-4">
                {icon}
              </div>
              <h3 class="text-xl font-semibold mb-2 text-darkRed dark:text-white">{title}</h3>
              <p class="text-brown dark:text-gray-300">{desc}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <hr class="border-t-2 border-gradient-to-r from-red to-darkRed" />

  <!-- Testimonials Section -->
  <section class="py-20 bg-cream dark:bg-gray-900">
    <div class="container mx-auto px-6">
      <h2
        class="text-4xl font-display text-center mb-12 bg-gradient-to-r from-goldLight to-goldDark bg-clip-text text-transparent"
        data-aos="fade-up"
      >
        Client Testimonials
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {
          testimonials.map((testimonial) => (
            <div
              class="bg-ivory dark:bg-gray-800 p-6 rounded-lg shadow-md border border-gradient-to-r from-goldLight to-goldDark"
              data-aos="fade-up"
            >
              <div class="flex items-center mb-4">
                <img
                  src={testimonial.image}
                  alt={testimonial.name}
                  class="w-12 h-12 rounded-full mr-4"
                />
                <div>
                  <h4 class="font-semibold text-red dark:text-white">
                    {testimonial.name}
                  </h4>
                  <p class="text-sm text-gray-500 dark:text-gray-400">
                    {testimonial.event}
                  </p>
                </div>
              </div>
              <p class="text-brown dark:text-gray-300">
                "{testimonial.text}"
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-red to-darkRed text-white text-center">
    <div class="container mx-auto px-6">
      <h2 class="text-4xl font-display mb-8" data-aos="fade-up">
        Ready to Capture Your Special Moments?
      </h2>
      <p class="text-xl mb-8" data-aos="fade-up" data-aos-delay="100">
        Let's create beautiful memories together
      </p>
      <a
        href="/contact"
        class="inline-block bg-gradient-to-r from-goldLight to-goldDark text-darkRed px-8 py-3 rounded-full text-lg font-semibold hover:opacity-90 transition duration-300"
        data-aos="fade-up"
        data-aos-delay="200"
      >
        Book a Session
      </a>
    </div>
  </section>
</Layout>